<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndividualChat">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/upperlinearLayout_individualchat"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbutton_individualchat_heading"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back_button_individualchat_heading" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileicon_individualchat_heading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_profile_icon"
            app:shapeAppearance="@style/shapableImageViewStyleindividualchatheading" />

        <LinearLayout
            android:id="@+id/linearlayout_individualchat_heading"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="96dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_individualchat_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/status_individualchat_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last seen at 06:59 PM 28 dec"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

       <Button
            android:id="@+id/callicon_individualchat_heading"
            android:layout_width="26dp"
            android:layout_height="40dp"
            android:layout_marginStart="-96dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="16dp"
            android:drawableBottom="@drawable/call_icon_individualchat_heading" />

        <Button
            android:id="@+id/videocallicon_individualchat_heading"
            android:layout_width="26dp"
            android:layout_height="40dp"
            android:layout_marginTop="19dp"
            android:drawableBottom="@drawable/video_call_icon_individualchat_heading" />
    </LinearLayout>

    <!-- Messages List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/individualchat_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/upperlinearLayout_individualchat"
        android:layout_above="@+id/message_input_row"
        android:background="@drawable/gradient_4"/>

    <!-- Message Input Row -->
    <LinearLayout
        android:id="@+id/message_input_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center_vertical">

        <!-- Image Button -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/individualchat_sendimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:background="@color/mainColor"
            android:scaleType="center"
            android:src="@drawable/image_add_ic"
            app:shapeAppearance="@style/shapableImageViewStyleindividualchatsendbutton"
             />

        <!-- Message Box -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="24dp">

            <EditText
                android:id="@+id/individualchat_message_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Message"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <!-- Send Button -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/individualchat_sendbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="@color/mainColor"
            android:scaleType="center"
            android:src="@drawable/icon_send"
            app:shapeAppearance="@style/shapableImageViewStyleindividualchatsendbutton" />

    </LinearLayout>

</RelativeLayout>
