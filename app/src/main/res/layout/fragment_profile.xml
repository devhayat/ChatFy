<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout_profilefragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <View
                    android:background="@color/mainColor"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:text="My Profile"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_profilfragment"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="120dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="80dp"
                    app:cardElevation="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:scaleType="fitXY"
                        android:id="@+id/profilepic_profilefragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/default_profile_icon"
                        app:shapeAppearance="@style/shapableImageViewStyleprofilepic" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/username_textview_1_profilefragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserName"
                    android:textSize="30sp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView_profilfragment"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/fullname_textview_1_profilefragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FullName"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/username_textview_1_profilefragment"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/mainColor"
                android:layout_marginStart="25dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/username_textview_2_profilefragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user name"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                android:textSize="17sp"/>
            <View
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="@color/mainColor"
                android:layout_marginStart="25dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/fullname_textview_2_profilefragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="full name"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                android:textSize="17sp"/>

            <View
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/mainColor"
                android:layout_marginStart="25dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/email_textview_profilefragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xyz@gmail.com"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                android:textSize="17sp"/>

            <View
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/mainColor"
                android:layout_marginStart="25dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/phonenumber_textview_profilefragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+919999999999"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                android:textSize="17sp"/>


            <View
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/editprofile_button_profilefragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Edit Profile"
                android:backgroundTint="@color/mainColor"
                />
            <View
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logout_button_profilefragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Log Out"
                android:backgroundTint="@color/mainColor"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>