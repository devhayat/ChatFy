<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Semi-transparent white to mimic frosted glass -->
    <gradient
        android:startColor="#1F1C2C"
    android:endColor="#928DAB"
    android:angle="90" />

    <!-- Rounded corners for premium look -->
    <corners android:radius="24dp" />

    <!-- Subtle border to look like glass edges -->
    <stroke
        android:width="1dp"
        android:color="#80FFFFFF" />

</shape>
